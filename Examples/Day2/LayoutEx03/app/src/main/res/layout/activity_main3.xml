<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    tools:context="com.example.administrator.layoutex03.MainActivity3">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="맛집찾기도우미"/>
    <RelativeLayout
        android:background="#66FFFFFF"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/userIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자아이디 : "/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userIdTV"
            android:layout_alignBaseline="@id/userIdTV"
            android:hint="사용자 아이디를 입력하시오"/>
        <TextView
            android:id="@+id/passwordTV"
            android:layout_marginTop="10dp"
            android:layout_below="@id/userIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자  암호  : "/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/passwordTV"
            android:layout_alignBaseline="@id/passwordTV"
            android:inputType="textPassword"
            android:hint="사용자 암호를 입력하시오"/>
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/passwordTV"
            android:text="로그인"/>
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_alignBaseline="@id/loginBtn"
            android:layout_alignParentRight="true"
            android:text="취소"/>
    </RelativeLayout>
    <Button
        android:onClick="goBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="돌아가기"/>
</RelativeLayout>
